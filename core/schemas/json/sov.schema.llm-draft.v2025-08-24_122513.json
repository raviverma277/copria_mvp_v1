{
  "type": "object",
  "properties": {
    "country": {
      "type": "string",
      "description": "The country code of the location.",
      "examples": [
        "GB"
      ],
      "pattern": "^[A-Z]{2}$"
    },
    "year_built": {
      "type": "integer",
      "description": "The year the building was constructed.",
      "examples": [
        1963,
        2010
      ]
    },
    "location_id": {
      "type": "string",
      "description": "Unique identifier for the location.",
      "examples": [
        "L-001",
        "L-002"
      ]
    },
    "roof_age_years": {
      "type": "integer",
      "description": "The age of the roof in years.",
      "examples": [
        22,
        8
      ],
      "minimum": 0
    },
    "fire_station_distance_km": {
      "type": "number",
      "description": "Distance to the nearest fire station in kilometers.",
      "examples": [
        1.2,
        5.5
      ]
    },
    "building_condition": {
      "type": "string",
      "description": "Condition of the building.",
      "examples": [
        "Excellent",
        "Needs Renovation"
      ]
    },
    "lat": {
      "type": "number",
      "description": "Latitude of the location.",
      "examples": [
        51.515,
        53.799
      ],
      "minimum": -90,
      "maximum": 90
    },
    "flood_score": {
      "type": "number",
      "description": "Flood risk score for the location.",
      "examples": [
        7.4,
        3.2
      ]
    },
    "sprinklers": {
      "type": "boolean",
      "description": "Indicates if the building has sprinklers.",
      "examples": [
        true,
        false
      ]
    },
    "alarm": {
      "type": "boolean",
      "description": "Indicates if the building has an alarm system.",
      "examples": [
        true
      ]
    },
    "postal_code": {
      "type": "string",
      "description": "Postal code of the location.",
      "examples": [
        "EC2A 2BB",
        "LS1 4AB"
      ]
    },
    "heritage_status": {
      "type": "boolean",
      "description": "Indicates if the building has heritage status.",
      "examples": [
        true,
        false
      ]
    },
    "tiv_building": {
      "type": "number",
      "description": "Total insured value of the building.",
      "examples": [
        5000000.0,
        3200000.0
      ],
      "minimum": 0
    },
    "address": {
      "type": "string",
      "description": "Street address of the location.",
      "examples": [
        "1 High Street",
        "100 River Road"
      ]
    },
    "tiv_content": {
      "type": "number",
      "description": "Total insured value of the contents.",
      "examples": [
        1500000.0,
        800000.0
      ],
      "minimum": 0
    },
    "city": {
      "type": "string",
      "description": "City where the building is located.",
      "examples": [
        "London",
        "Leeds"
      ]
    },
    "lng": {
      "type": "number",
      "description": "Longitude of the location.",
      "examples": [
        -0.09,
        -1.549
      ],
      "minimum": -180,
      "maximum": 180
    },
    "earthquake_zone": {
      "type": "string",
      "description": "Earthquake risk zone classification.",
      "examples": [
        "Zone 3",
        "Zone 2"
      ]
    },
    "construction": {
      "type": "string",
      "description": "Type of construction material used.",
      "examples": [
        "Masonry",
        "Steel"
      ]
    },
    "tiv_bi": {
      "type": "number",
      "description": "Total insured value for business interruption.",
      "examples": [
        2000000.0,
        1000000.0
      ],
      "minimum": 0
    },
    "occupancy": {
      "type": "string",
      "description": "Type of occupancy of the building.",
      "examples": [
        "Warehousing",
        "Manufacturing"
      ]
    }
  },
  "required": [
    "address",
    "country",
    "tiv_building"
  ]
}