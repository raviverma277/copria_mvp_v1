{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "SchemaDiscoveryProposal",
    "type": "object",
    "properties": {
      "doc_type": { "type": "string", "enum": ["sov", "loss_run", "questionnaire"] },
      "mappings": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["source_header", "target_field", "confidence"],
          "properties": {
            "source_header": { "type": "string" },
            "target_field": { "type": "string" },
            "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
            "rationale": { "type": "string" }
          }
        }
      },
      "new_fields": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["field_name", "description"],
          "properties": {
            "field_name": { "type": "string" },
            "description": { "type": "string" },
            "example": { "type": "string" }
          }
        }
      }
    },
    "required": ["doc_type", "mappings"],
    "additionalProperties": false
  }
  