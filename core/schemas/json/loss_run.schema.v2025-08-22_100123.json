{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/lloyds/loss_run.schema.json",
  "title": "LloydsLossRun",
  "type": "array",
  "description": "Loss run records aligned to Lloydâ€™s conventions.",
  "items": {
    "type": "object",
    "properties": {
      "policy_number": {
        "type": "string",
        "description": "Policy number or reference if provided."
      },
      "date_of_loss": {
        "type": "string",
        "format": "date",
        "description": "YYYY-MM-DD."
      },
      "cause": {
        "type": "string",
        "description": "Cause of loss / peril."
      },
      "cat_indicator": {
        "type": "boolean",
        "description": "Whether loss is catastrophe-related (if indicated)."
      },
      "gross_paid": {
        "type": "number",
        "description": "Gross paid amount."
      },
      "gross_outstanding": {
        "type": "number",
        "description": "Gross outstanding reserve."
      },
      "net_paid": {
        "type": "number",
        "description": "Net paid after recoveries."
      },
      "net_outstanding": {
        "type": "number",
        "description": "Net outstanding after recoveries."
      },
      "status": {
        "type": "string",
        "description": "Open/Closed if indicated.",
        "enum": [
          "OPEN",
          "CLOSED",
          "UNKNOWN"
        ]
      },
      "adjuster_notes": {
        "type": "string",
        "description": "Suggested new field (low-confidence mapping 0.50). Adjuster Notes may indicate the status of the claim, but it's not a direct mapping."
      },
      "claim_reference": {
        "type": "string",
        "description": "Suggested new field (low-confidence mapping 0.50). Claim Reference could be related to the policy number, but it is not a direct match."
      },
      "reopened_flag": {
        "type": "string",
        "description": "Suggested new field (low-confidence mapping 0.50). Reopened Flag may relate to outstanding amounts, but it is not a direct mapping."
      },
      "litigation_status": {
        "type": "string",
        "examples": [
          "Open"
        ],
        "maxLength": 6,
        "enum": [
          "Open",
          "Closed"
        ]
      },
      "loss_description": {
        "type": "string",
        "examples": [
          "Minor fire in storage area"
        ],
        "maxLength": 28,
        "enum": [
          "Minor fire in storage area",
          "Major fire in reception area"
        ]
      }      
    },
    "required": [
      "date_of_loss",
      "cause"
    ]
  }
}